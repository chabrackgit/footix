{% extends 'base.html.twig' %}

{% block title %}Entraineur index{% endblock %}

{% block body %}
    <h1>Entraineur</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Nationalite</th>
                <th>AncienJoeur</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entraineur in entraineurs %}
            <tr>
                <td>{{ entraineur.id }}</td>
                <td>{{ entraineur.nom }}</td>
                <td>{{ entraineur.prenom }}</td>
                <td>{{ entraineur.nationalite }}</td>
                <td>{{ entraineur.AncienJoeur ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_entraineur_show', {'id': entraineur.id}) }}">show</a>
                    <a href="{{ path('app_entraineur_edit', {'id': entraineur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_entraineur_new') }}">Create new</a>
{% endblock %}
